<Window x:Class="WpfApplication1.SetSolutionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        Title="Ввод решений" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Center">Задайте решения:</Label>
        <DataGrid x:Name="xGrid" Grid.Row="1" Margin="5,0,5,0" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="OkBtn" Content="OK" IsDefault="True" Grid.Row="2" Width="65" Click="OkBtn_Click"/>
            <Button x:Name="CancelBtn" Content="Отмена" IsCancel="True" Width="65"/>
        </StackPanel>       
    </Grid>
</Window>
