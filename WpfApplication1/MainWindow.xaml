<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="492" Width="956">
    <TabControl>
        <TabItem>
            <TabItem.Header>Гоняем сэмпл</TabItem.Header>
            <TabItem.Content>
                <Grid HorizontalAlignment="Left" Height="482" VerticalAlignment="Top" Width="946" Margin="0,0,-8,-20">
                    <DataGrid x:Name="AGrid" HorizontalAlignment="Left" Margin="167,128,0,0" VerticalAlignment="Top" Height="169" Width="271">
                    </DataGrid>
                    <Button x:Name="SolveBtn" Content="Решить" HorizontalAlignment="Left" Margin="333,333,0,0" VerticalAlignment="Top" Width="75" Click="SolveBtn_Click"/>
                    <DataGrid x:Name="bGrid" HorizontalAlignment="Left" Margin="443,128,0,0" VerticalAlignment="Top" Height="169" Width="92">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="b"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox x:Name="DimBox" HorizontalAlignment="Left" Height="23" Margin="224,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="CreateBtn" Content="Сгенерировать" HorizontalAlignment="Left" Margin="404,75,0,0" VerticalAlignment="Top" Width="111" Click="CreateBtn_Click"/>
                    <TextBox x:Name="MinBox" HorizontalAlignment="Left" Height="23" Margin="224,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="MaxBox" HorizontalAlignment="Left" Height="23" Margin="379,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="SolGenBtn" Content="Задать решения вручную" HorizontalAlignment="Left" Margin="553,204,0,0" VerticalAlignment="Top" Width="166" Click="SolGenBtn_Click" RenderTransformOrigin="1.08,-2.227"/>
                    <ComboBox  x:Name="MethodBox" HorizontalAlignment="Left" Margin="596,55,0,0" VerticalAlignment="Top" Width="165">
                        <ComboBoxItem x:Name="J" IsSelected="True">Метод Якоби</ComboBoxItem>
                        <ComboBoxItem x:Name="GS">Метод Гаусса-Зейдля</ComboBoxItem>
                        <ComboBoxItem x:Name="SOR">Метод верхней релаксации</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>Пакетный режим</TabItem.Header>
            <TabItem.Content>Бла</TabItem.Content>
        </TabItem>
    </TabControl>
    
</Window>
